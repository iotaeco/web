{
	"compilerOptions": {
		"target": "es5",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"lib": [
			"dom",
			"es2015"
		],
		"experimentalDecorators": true,
		"module": "system"
	},
	"include": [
		"./src/**/*",
		"./test/unit/src/**/*",
		"./test/e2e/src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}